<%= stylesheet_link_tag "show" %>
<div>


  <h2>Trip <%= @trip.id %></h2>

  <table>
    <thead>
      <tr>
        <th>DRIVER</th>
        <th>PASSENGER</th>
        <th>DATE</th>
        <th>PRICE</th>
        <th>RATING</th>
        <th>ACTIONS</th>
      </tr>
    </thead>
    <tbody>

      <tr>
        <td><%= @driver %></td>
        <td><%= @passenger %></td>
        <td><%= @trip.date %></td>
        <td><%= number_to_currency((@trip.cost.to_f)/100, precision: 2)%> </td>


        <% if @trip.rating == nil %>
        <%= form_for @trip do |f| %>
        <%= f.select :rating, [ 1, 2, 3, 4, 5 ], prompt: 'Rating' %>

        <%= f.submit 'Rate Trip' %>
        <% end %>
        <% else %>
        <td> <%= @trip.rating %></td>
        <% end %>

        <td>  <%= link_to "Edit", edit_trip_path(@trip[:id]) %>  <%= link_to "Delete", trip_path(@trip[:id]), method: :delete %> </td>

      </tr>
    </tbody>
  </table>
</div>
