<link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet' />

<h1>Trip <%= @trip.id %></h1>



<section>
  <p>Driver: <%= @driver %></p>
  <p>Passenger: <%= @passenger %></p>
  <p>Date: <%= @trip.date %></p>
  <p>Cost: <%= number_to_currency((@trip.cost.to_f)/100, precision: 2)%> </p>
  <p>   <% if @trip.rating == nil %>
     <%= form_for @trip do |f| %>
      <%= f.select :rating, [ 1, 2, 3, 4, 5 ], prompt: 'Rating' %>

      <%= f.submit 'Rate Trip' %>
     <% end %>
   <% else %>
     <%= @trip.rating %>
   <% end %>
 </p>
</section>

<ul >
  <li>  <%= link_to "Edit", edit_trip_path(@trip[:id]) %>  <%= link_to "Delete", trip_path(@trip[:id]), method: :delete %> </li>
</ul>
