<h1>Rideshare Passengers</h1>

<% @passengers.each do |passenger| %>

  <ul >
    <li> <%= image_tag(passenger.img, :alt => "Passenger Picture") %> <%= link_to passenger.name, passenger_path(passenger[:id]) %>  <%= link_to "Edit", edit_passenger_path(passenger[:id]) %>  <%= link_to "Delete", passenger_path(passenger[:id], method: :delete), method: :delete %></li>
  </ul>

<% end %>
