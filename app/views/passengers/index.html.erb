<link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet' />
<%= stylesheet_link_tag "drivers" %>

<div>

  <h1>Rideshare Passengers</h1>

  <table>

    <tbody>
      <% @passengers.each do |passenger| %>
      <tr >
        <td> <%= image_tag(passenger.img, :alt => "Passenger Picture") %> </td>
        <td><%= link_to passenger.name, passenger_path(passenger[:id]) %> </td>
        <td><%= link_to "Edit", edit_passenger_path(passenger[:id]) %>  <%= link_to("Delete", passenger_path(passenger[:id], method: :delete), method: :delete, data: {confirm: "Are you sure?"}) %> </td>
      </tr>

      <% end %>
    </tbody>
  </table>
</div>
