<h1>Passenger <%= @passenger.name %> </h1>

<section>
  <p> Phone: <%= @passenger.phone_num %> </p>
  <p> Total Paid: <%= number_to_currency((@total_paid.to_f)/100, precision: 2)%> </p>
</section>

<ul>
  <li>TRIP ID</li>
  <li>DATE</li>
  <li>DRIVER</li>
  <li>PRICE</li>
  <li>RATING</li>
  <li>ACTIONS</li>
</ul>

<% @passenger.trips.each do |trip| %>
  <ul>
    <li>  <%= link_to trip.id, show_trip_path(trip[:id])%> <%= trip.date %>

      <% if trip.driver_exist %>
        <%= link_to trip.driver_id , driver_path(trip[:driver_id])%>
      <% else %>
        <%= trip[:driver_id] %>
      <% end %>



     <%= number_to_currency((trip.cost.to_f)/100, precision: 2)%> <%= trip.rating %> <%= link_to "Edit", edit_trip_path(trip[:id]) %>  <%= link_to "Delete", delete_trip_path(trip[:id]), method: :delete %> </li>

  </ul>
<% end %>
